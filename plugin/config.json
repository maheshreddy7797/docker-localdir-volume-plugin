{
    "description": "Example volume plugin",
    "documentation": "https://github.com/maheshreddy7797/docker-volume-driver/",
    "entrypoint": ["/docker-volume-driver"],
    "env": [
        {
            "name": "DEBUG",
            "settable": [
                "value"
            ],
            "value": "0"
        }
    ],
    "interface": {
        "socket": "docker-volume-driver.sock",
        "types": [
            "docker.volumedriver/1.0"
        ]
    },
    "linux": {
        "capabilities": [
            "CAP_SYS_ADMIN"
        ]
    },
    "mounts": [
	{
            "destination": "/mnt/state",
            "source": "/tmp/exampledriver",
            "options": ["rbind"],
            "type": "bind"
	},
        
	{
            "destination": "/etc",
            "options": ["rbind", "rw"],
            "source": "/etc/myexampledriver",
            "type": "rbind"
}
    ],
    "network": {
        "type": "host"
    },
    "propagatedmount": "/mnt"
}
